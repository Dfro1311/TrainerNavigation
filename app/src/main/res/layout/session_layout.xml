<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sessionCostView"
        android:layout_width="364dp"
        android:layout_height="73dp"
        android:text="session cost"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/sessionDateView"
        android:layout_width="364dp"
        android:layout_height="73dp"
        android:text="session date/time"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/sessionTypeView"
        android:layout_width="364dp"
        android:layout_height="73dp"
        android:text="session type/name"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/payButton"
        android:layout_width="184dp"
        android:layout_height="102dp"
        android:text="Pay for Session?"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="321dp" />

</android.support.constraint.ConstraintLayout>